<?xml version="1.0" encoding="utf-8"?>
<s:ItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009" 
				xmlns:s="library://ns.adobe.com/flex/spark" 
				xmlns:mx="library://ns.adobe.com/flex/mx" 
				autoDrawBackground="true">
	
	
	<fx:Declarations>
		<s:DateTimeFormatter id="dateFormatter" />
	</fx:Declarations>
	
	<fx:Script>
		<![CDATA[
			import flashx.textLayout.conversion.TextConverter;
			import flashx.textLayout.elements.TextFlow;
			
			import org.reporterslab.archiver.models.vo.Status;
			
			[Bindable]
			public var status:Status;
			
			[Bindable]
			public var flow:TextFlow;
			
			override public function set data(value:Object):void
			{
				super.data = value;
				if(data){
					this.status = value as Status;
					var urlExp:RegExp = /(\b(?:(?:https?|ftp|file):\/\/|www\.|ftp\.)(?:\([-A-Z0-9+&@#\/%=~_|$?!:,.]*\)|[-A-Z0-9+&@#\/%=~_|$?!:,.])*(?:\([-A-Z0-9+&@#\/%=~_|$?!:,.]*\)|[A-Z0-9+&@#\/%=~_|$]))/ig
					var linkedText:String = status.text.replace(urlExp, "<a href='$1' target='_blank'>$1</a>"); 
					flow = TextConverter.importToFlow(linkedText, TextConverter.TEXT_FIELD_HTML_FORMAT);
				}
			}
			
		]]>
	</fx:Script>
	
	
	<s:HGroup>
		<s:Image id="avatar" width="48" height="48" source="{status.user.profileImageUrl}" />
		<s:VGroup height="100%">
			<s:Label id="userName" text="\@{status.user.screenName} ({status.user.name})" fontWeight="bold" />
			<s:RichEditableText id="text" textFlow="{flow}" width="370" editable="false" focusEnabled="false" />
			<s:Label id="date" text="{dateFormatter.format(status.createdAt)}" />
		</s:VGroup>
	</s:HGroup>
	
</s:ItemRenderer>
