<?xml version="1.0" encoding="utf-8"?>
<s:ItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009" 
				xmlns:s="library://ns.adobe.com/flex/spark" 
				xmlns:mx="library://ns.adobe.com/flex/mx" 
				autoDrawBackground="true">
	
	<fx:Script>
		<![CDATA[
			import org.reporterslab.archiver.models.vo.Place;

			[Bindable]
			public var place:Place;
			
			override public function set data(value:Object):void
			{
				super.data = value;
				if(data)
					this.place = data as Place;
			}
			
			
		]]>
	</fx:Script>
	
	<s:VGroup height="100%">
		<s:RichEditableText id="placeName" text="{place.fullName}" width="200" fontWeight="bold" />
		<s:Label id="placeCountry" text="{place.country}" />
		<s:Label id="placeType" text="{place.type}" />
	</s:VGroup>

</s:ItemRenderer>
